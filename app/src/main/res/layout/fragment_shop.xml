<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ShopFragment">
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        style="@style/AVLoadingIndicatorView"
        android:visibility="visible"
        android:layout_centerInParent="true"
        fab:indicatorName="BallSpinFadeLoaderIndicator"
        fab:indicatorColor="@color/colorPrimary"
        android:translationZ="@dimen/_1sdp"
        />
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75sdp"
        android:background="@color/black"
        >

        <ImageView
            android:id="@+id/btn_Cart"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/ic_cart"
            android:layout_marginRight="@dimen/_30sdp"
            />
        <RelativeLayout
            android:id="@+id/cart_bgRound"
            android:visibility="gone"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_17sdp"
            android:layout_marginRight="@dimen/_17sdp"
            android:background="@drawable/round_bg">
            <TextView
                android:id="@+id/user_CartItemsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                />

        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/txt_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/_100sdp"
            android:maxLines="1"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/segoe"
            android:text="Imamia Colony"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/top"
            android:background="@color/colorPrimaryDark"
            >
            <LinearLayout
                android:id="@+id/main_Layout"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/search_Layout"
                    android:layout_marginTop="@dimen/_90sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_rounded_corners"
                    android:backgroundTint="@color/colorAccent"
                    >
                    <EditText
                        android:id="@+id/search_EditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/_25sdp"
                        android:layout_weight="0.8"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@null"
                        android:hint="Search Products"
                        android:textColorHint="@color/black"
                        android:maxLines="1"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null"
                        />
                    <ImageView
                        android:id="@+id/btn_Search"
                        android:paddingVertical="@dimen/_10sdp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:src="@drawable/ic_search"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_190sdp"
                    android:src="@drawable/home_banner"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_Layout2"
                android:visibility="gone"
                android:layout_below="@id/main_Layout"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/_10sdp"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_Category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:itemCount="5"
                    android:layout_marginTop="@dimen/_20sdp"
                    />
                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryDim"
                    android:layout_marginVertical="@dimen/_10sdp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    >
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wine Products"
                        android:textColor="@color/black"
                        android:fontFamily="@font/segoe"
                        android:textSize="@dimen/_16sdp"
                        />
                    <TextView
                        android:id="@+id/wine_SeeAll"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SEE ALL"
                        android:textColor="@color/black"
                        android:fontFamily="@font/segoe"
                        android:textSize="@dimen/_14sdp"
                        />
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_TopWine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    />
                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryDim"
                    android:layout_marginVertical="@dimen/_10sdp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    >
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Liquor Products"
                        android:textColor="@color/black"
                        android:fontFamily="@font/segoe"
                        android:textSize="@dimen/_16sdp"
                        />
                    <TextView
