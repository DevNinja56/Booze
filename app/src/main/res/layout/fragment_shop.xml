                                />
                            <TextView
                                android:layout_marginTop="@dimen/_7sdp"
                                android:fontFamily="@font/segoe"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorAccent"
                                android:textStyle="bold"
                                android:text="$ 12.99"
                                android:textSize="@dimen/_16sdp"
                                android:id="@+id/random_ProductPrice1"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:id="@+id/random_ProductImage1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_145sdp"
                                android:translationZ="1dp"
                                android:layout_marginTop="-10dp"
                                android:src="@drawable/ic_botel" />
                        </LinearLayout>
                    </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <View
                            android:id="@+id/line5"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimaryDim"
                            android:layout_marginVertical="@dimen/_25sdp"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            >
                            <TextView
                                android:layout_alignParentLeft="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Beer Products"
                                android:textColor="@color/black"
                                android:fontFamily="@font/segoe"
                                android:textSize="@dimen/_16sdp"
                                />
                            <TextView
                                android:id="@+id/beer_SeeAll"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SEE ALL"
                                android:textColor="@color/black"
                                android:fontFamily="@font/segoe"
                                android:textSize="@dimen/_14sdp"
                                />
                        </RelativeLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerview_TopBeer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_20sdp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <View
                            android:id="@+id/line6"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimaryDim"
                            android:layout_marginVertical="@dimen/_25sdp"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            >
                            <TextView
                                android:layout_alignParentLeft="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mixer Products"
                                android:textColor="@color/black"
                                android:fontFamily="@font/segoe"
                                android:textSize="@dimen/_16sdp"
                                />
                            <TextView
                                android:id="@+id/mixer_SeeAll"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SEE ALL"
                                android:textColor="@color/black"
                                android:fontFamily="@font/segoe"
                                android:textSize="@dimen/_14sdp"
                                />
                        </RelativeLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerview_TopMixer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_20sdp"
                            />
                    </LinearLayout>
                    <View
                        android:id="@+id/line7"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimaryDim"
                        android:layout_marginVertical="@dimen/_25sdp"
                        />
                    <LinearLayout
                        android:id="@+id/random_Product2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_10sdp">
                    <TextView
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="Campo Viejo"
                        android:id="@+id/random_ProductName2"
                        android:textSize="@dimen/_18sdp"
                        android:fontFamily="@font/segoe"
                        android:textStyle="bold"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:visibility="gone"
                                android:textSize="@dimen/_14sdp"
                                android:fontFamily="@font/segoe"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="Tempranilo"
                                android:id="@+id/text_CompanyName2"
                                />
                            <TextView
                                android:id="@+id/random_ProductDescription2"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:textSize="@dimen/_10sdp"
                                android:fontFamily="@font/segoe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/grey"
                                android:maxLines="8"
                                android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet. Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et"
                                />
                            <TextView
                                android:layout_marginTop="@dimen/_7sdp"
                                android:fontFamily="@font/segoe"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorAccent"
                                android:textStyle="bold"
                                android:text="$ 12.99"
                                android:textSize="@dimen/_16sdp"
                                android:id="@+id/random_ProductPrice2"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/random_ProductImage2"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_140sdp"
                                android:translationZ="1dp"
                                android:layout_marginTop="-10dp"
                                android:src="@drawable/ic_botel" />
                        </LinearLayout>
                    </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/_20sdp"
                        >
                        <View
                            android:id="@+id/line8"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimaryDim"
                            android:layout_marginVertical="@dimen/_25sdp"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            >
                            <TextView
                                android:layout_alignParentLeft="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Smokes Products"
                                android:textColor="@color/black"
                                android:fontFamily="@font/segoe"
                                android:textSize="@dimen/_16sdp"
                                />
                            <TextView
                                android:id="@+id/smokes_SeeAll"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SEE ALL"
                                android:textColor="@color/black"
                                android:fontFamily="@font/segoe"
                                android:textSize="@dimen/_14sdp"
                                />
                        </RelativeLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerview_TopSmoke"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_20sdp"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>