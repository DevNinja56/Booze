<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/_10sdp"
    android:id="@+id/cart_ProductsItem"
    >
    <ImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/product_Picture"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/ic_botel" />
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/product_Picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/product_Name"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/segoe"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="Tempranilo"
            />
        <TextView
            android:id="@+id/product_Price"
            android:layout_marginTop="@dimen/_7sdp"
            android:fontFamily="@font/segoe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:text="$ 12.99"
            android:textSize="@dimen/_16sdp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true">
        <ImageView
            android:id="@+id/plus_Sign"
            android:layout_gravity="center"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"/>
        <TextView
            android:id="@+id/product_Quantity"
            android:layout_below="@id/plus_Sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:text="1"
            android:textSize="@dimen/_20sdp"
            />
        <ImageView
            android:id="@+id/minus_Sign"
            android:layout_below="@id/product_Quantity"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/ic_minus"/>

    </LinearLayout>
</RelativeLayout>