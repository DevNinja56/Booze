<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/_140sdp"
    android:paddingVertical="@dimen/_10sdp"
    android:id="@+id/order_Item"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    >
    <ImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/order_Picture"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:src="@drawable/ic_delivery_boy" />
    <LinearLayout
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_toRightOf="@+id/order_Picture"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/order_Status"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/segoe"
            android:gravity="center"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="On Way"
            android:textStyle="bold"
            />

        <LinearLayout
            android:id="@+id/estimate_Time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:id="@+id/text_EstimateTime"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/segoe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="Estimated Time"
            />
        <TextView
            android:id="@+id/order_EstimateTime"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/segoe"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="11 Min"
            />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/order_TotalCost"
        android:textSize="@dimen/_16sdp"
        android:fontFamily="@font/segoe"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:text="28.00$"
        />
    <TextView
        android:id="@+id/order_DateTime"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/segoe"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDim"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:text="10-05-2020   03:26"
        />
</RelativeLayout>